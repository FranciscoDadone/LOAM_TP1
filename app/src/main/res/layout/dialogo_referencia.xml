<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Título del diálogo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Agregar Referencia"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Subtítulo explicativo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Agrega una referencia para identificar mejor este lugar"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/gray" />

    <!-- Campo de texto para la referencia -->
    <EditText
        android:id="@+id/edtReferenciaDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="Ej: Casa de Juan, Oficina, Restaurante favorito..."
        android:minHeight="48dp"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Botón Cancelar -->
        <Button
            android:id="@+id/btnCancelarDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button_secondary"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_primary"
            android:text="Guardar"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>