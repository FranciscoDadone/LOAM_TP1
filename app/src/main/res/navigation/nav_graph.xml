<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.loam.trabajopractico1loam.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.loam.trabajopractico1loam.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    
    <!-- Map Fragment -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.loam.trabajopractico1loam.ui.mapa.MapFragment"
        android:label="Mapa"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_mapFragment_to_listaFragment"
            app:destination="@id/listaFragment" />
    </fragment>
    
    <!-- Lista Fragment -->
    <fragment
        android:id="@+id/listaFragment"
        android:name="com.loam.trabajopractico1loam.ui.mapa.ListaFragment"
        android:label="Lugares Guardados"
        tools:layout="@layout/fragment_lista">

        <action
            android:id="@+id/action_listaFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
</navigation>